<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="2dp"
    android:paddingTop="8dp"
    android:layout_margin="8dp">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/server_card"
        android:orientation="horizontal"
        android:background="#42595D">
        <TextView
            android:id="@+id/title"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server"
            android:layout_weight="0.9"
            android:textColor="#ffffff"
            android:textSize="24sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/moreButton"
            android:src="@drawable/ic_ic_more_vert_24px_white"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
           android:id="@+id/host"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:text="irc.example.com"
            android:textColor="#1e1e1e"
           android:textSize="14sp" />


        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="#dedede"
        android:orientation="vertical"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="fill_parent"
            android:id="@+id/server_rooms"
            android:textColor="#1e1e1e"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="Rooms:"/>

        <TextView
            android:id="@+id/channel_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="irc.example.com"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="#dedede"
        android:orientation="vertical"
        android:padding="10dp"/>
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/connectNewRoom"
        android:paddingLeft="16dp">
        <TextView
            android:id="@+id/addRoom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Connect to another room"
            android:layout_gravity="center_vertical"
            android:textColor="#717171"
            android:textSize="11sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.2"
            android:paddingRight="16dp"
            android:src="@drawable/ic_ic_arrow_forward_24px"/>
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
