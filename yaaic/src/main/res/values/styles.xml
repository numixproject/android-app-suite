<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Hermes" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#0097A7</item>
        <item name="colorPrimaryDark">#00838F</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Preferences" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#0097A7</item>
        <item name="colorPrimaryDark">#00838F</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyNavigationDrawerTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar.TranslucentKitKatStatusBar">
        <item name="colorPrimary">#0097A7</item>
        <item name="colorPrimaryDark">#00838F</item>
        <item name="singleAccount">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="multipaneSupport">true</item>
        <item name="drawerType">@integer/DRAWERTYPE_IMAGE</item>
        <item name="android:windowContentOverlay">@drawable/above_shadow</item>
        <item name="rippleBackport">true</item>
        <item name="learningPattern">false</item>
        <item name="toolbarElevation">true</item>
    </style>
    <style name="HermesDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">#4baeae</item>
        <item name="colorPrimaryDark">#4baeae</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
