<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:svgimageview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/simplePad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center" >
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp" >
        <com.numix.calculator.view.ColorButton
            android:id="@+id/digit7"
            android:text="@string/digit7"
            style="?digit_button_style" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/digit8"
            android:text="@string/digit8"
            style="?digit_button_style" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/digit9"
            android:text="@string/digit9"
            style="?digit_button_style" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <com.numix.calculator.view.ColorButton
                android:id="@+id/del"
                android:clickable="true"
                android:background="@drawable/btn_digit_light"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="false"
                android:src="@drawable/backspace"
                android:focusable="true"
                android:background="#00000000"
                android:scaleType="centerInside" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <com.numix.calculator.view.ColorButton
                android:id="@+id/clear"
                android:background="@drawable/btn_digit_light"
                style="?digit_button_style" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="false"
                android:src="@drawable/clear"
                android:focusable="true"
                android:background="#00000000"
                android:scaleType="centerInside" />
        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp" >
        <com.numix.calculator.view.ColorButton
            android:id="@+id/digit4"
            android:text="@string/digit4"
            style="?digit_button_style" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/digit5"
            android:text="@string/digit5"
            style="?digit_button_style" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/digit6"
            android:text="@string/digit6"
            style="?digit_button_style" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/plus"
            android:text="@string/plus"
            style="?digit_button_style" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/minus"
            android:text="@string/minus"
            style="?digit_button_style" />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp" >
        <com.numix.calculator.view.ColorButton
            android:id="@+id/digit1"
            android:text="@string/digit1"
            style="?digit_button_style" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/digit2"
            android:text="@string/digit2"
            style="?digit_button_style" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/digit3"
            android:text="@string/digit3"
            style="?digit_button_style" />

        <com.numix.calculator.view.ColorButton
            android:id="@+id/mul"
            android:text="@string/mul"
            style="?digit_button_style" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/div"
            android:text="@string/div"
            style="?digit_button_style" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp" >
        <com.numix.calculator.view.ColorButton
            android:id="@+id/dot"
            android:text="@string/dot"
            style="?digit_button_style" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/digit0"
            android:text="@string/digit0"
            style="?digit_button_style" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/leftParen"
            android:text="@string/leftParen"
            style="?digit_button_style" />
        <com.numix.calculator.view.ColorButton
            android:id="@+id/rightParen"
            android:text="@string/rightParen"
            style="?digit_button_style" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <com.numix.calculator.view.ColorButton
                android:id="@+id/equal"
                android:text="@string/equal"
                android:background="@drawable/btn_digit_light"
                style="?digit_button_style" />


            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="false"
                android:src="@drawable/circle"
                android:focusable="true"
                android:background="@color/transparent"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:textColor="#ffffff" >
            </TextView>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
